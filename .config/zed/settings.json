// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Base16 Ayu Dark",
  "helix_mode": true,
  "ui_font_family": "Inter",
  "ui_font_size": 14,
  "agent_font_size": 17,
  "buffer_font_family": "Lilex",
  "buffer_font_size": 14,
  // "buffer_line_height": {
  //   "custom": 1.5
  // },
  "wrap_guides": [80, 100],
  "terminal": {
    "dock": "right",
    "line_height": "standard",
    "env": {
      "REACT_EDITOR": "zeditor"
    }
  },
  "vertical_scroll_margin": 5,
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "toggle_on_modifiers_press": { "alt": true }
  },
  "autosave": "on_focus_change",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "minimap": { "show": "auto" },
  "title_bar": { "show_branch_icon": true },
  "show_signature_help_after_edits": true,
  // "auto_update": false,
  "languages": {
    "HTML": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "CSS": {
      "format_on_save": "off",
      "tab_size": 2
    },
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."]
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."]
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
      "inlay_hints": {
        "enabled": true
      }
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."]
    },

    "Astro": {
      "language_servers": ["astro-language-server", "..."], // Force default
      "formatter": "prettier",
      "tab_size": 2
    }
  },
  "experimental.theme_overrides": {
    "title_bar.inactive_background": "#000000",
    "editor.indent_guide": "#eeeeee05",
    "editor.document_highlight.bracket_background": "#eeeeee05",
    "editor.document_highlight.read_background": "#eeeeee05",
    "editor.wrap_guide": "#eeeeee05",
    "panel.indent_guide": "#eeeeee05",
    "hint": "#3e4b59"
  },
  "calls": { "mute_on_join": true }
}
